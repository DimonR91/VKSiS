                    <Label Content="Destination Adress" />
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="0010" Height="23" Width="40" MaxLength="4" Name="DestId01"/>
                        <Label Content="." />
                        <TextBox Text="0001" Height="23" Width="40" MaxLength="4" Name="DestGroupId01"/>
