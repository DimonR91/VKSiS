                </StackPanel>
                <ComboBox Name="ComboBox01" Height="30" Width="100" SelectionChanged="ComboBox01_SelectionChanged" >
                    <ComboBoxItem Content="Unicast" HorizontalAlignment="Left" Width="98" IsSelected="True"/>
                    <ComboBoxItem Content="Multicast" HorizontalAlignment="Left" Width="98"/>
                    <ComboBoxItem Content="Broadcast" HorizontalAlignment="Left" Width="98"/>
                </ComboBox>
            </StackPanel>
            <Label Content="Input:" />
            <TextBox Name="Input01" HorizontalAlignment="Stretch" MinHeight="80" VerticalAlignment="Stretch" TextWrapping="Wrap" KeyUp="Input01_KeyUp" />
            <Label Content="Output:" />
            <TextBox Name="Output01" HorizontalAlignment="Stretch" MinHeight="80" VerticalAlignment="Stretch"  TextWrapping="Wrap"  IsReadOnly="True"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Source Adress" />
