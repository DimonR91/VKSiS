                    <ComboBoxItem Content="Multicast" HorizontalAlignment="Left" Width="98"/>
                    <ComboBoxItem Content="Broadcast" HorizontalAlignment="Left" Width="98"/>
                </ComboBox>
            </StackPanel>
            <Label Content="Input:" />
            <TextBox Name="Input10" HorizontalAlignment="Stretch" MinHeight="80" VerticalAlignment="Stretch" TextWrapping="Wrap" KeyUp="Input10_KeyUp" />
            <Label Content="Output:" />
            <TextBox Name="Output10" HorizontalAlignment="Stretch" MinHeight="80" VerticalAlignment="Stretch"  TextWrapping="Wrap"  IsReadOnly="True"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
