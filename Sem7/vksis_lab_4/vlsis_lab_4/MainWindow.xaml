                    </StackPanel>
                </StackPanel>
                <ComboBox Name="ComboBox11" Height="30" Width="100" SelectionChanged="ComboBox11_SelectionChanged" >
                    <ComboBoxItem Content="Unicast" HorizontalAlignment="Left" Width="98" IsSelected="True"/>
                    <ComboBoxItem Content="Multicast" HorizontalAlignment="Left" Width="98"/>
                    <ComboBoxItem Content="Broadcast" HorizontalAlignment="Left" Width="98"/>
                </ComboBox>
            </StackPanel>
            <Label Content="Input:" />
            <TextBox Name="Input11" HorizontalAlignment="Stretch" MinHeight="80" VerticalAlignment="Stretch" TextWrapping="Wrap" KeyUp="Input11_KeyUp" />
            <Label Content="Output:" />
            <TextBox Name="Output11" HorizontalAlignment="Stretch" MinHeight="80" VerticalAlignment="Stretch"  TextWrapping="Wrap"  IsReadOnly="True"/>
        </StackPanel>

    </Grid>
</Window>
